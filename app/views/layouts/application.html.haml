!!!
%html
%head
  %title Awesome Pizza
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  %div{:class => "navbar navbar-fixed-top"}
    %div{:class => "navbar-inner"}
      %div{:class => "container"}
        %a{:class => "btn btn-navbar", :'data-toggle'=>"collapse", :'data-target'=>".nav-collapse"}
          %span{:class=>"icon-bar"}
          %span{:class=>"icon-bar"}
          %span{:class=>"icon-bar"}
          = link_to "Pizza", root_path(), :class => "brand"
          %div{:class => "nav-collapse"}
            = render_navigation :renderer => BootstrapTopbarList
          
          %ul{:class => "nav pull-right"}
            - if current_user
              %li{:class=>"divider-vertical"}
              %li{:class=>"dropdown"}
                %a{:href=>"#", :class=>"dropdown-toggle", :'data-toggle'=>"dropdown"}
                  = current_user.name || current_user.login
                  %b{:class=>"caret"}
                %ul{:class=>"dropdown-menu"}
                  %li
                    = link_to "Account", edit_user_path(current_user)
                  %li{:class=>"divider"}
                  %li
                    = link_to "Logout", logout_path
            - else
              %li{:class=>"divider"}
                = link_to "Register", new_user_path
              %li
                = link_to "Login", login_path
          
      %div{:class=>"nav-collapse pull-right"}    
  
  - # Flash messages
  %div{:class=>"container"}
    - flash.each do |key, msg|
      - if key == "alert"
        %div{:class=> "alert alert-error"}
      - if key = "notice"
        %div{:class=> "alert alert-success"}
          %a{:class=>"close", :'data-dismiss'=>"alert"} x
          = msg
  
    - # Content
    %div{:class=>"row"}
      %div{:class => "span12"}
        = yield
    %hr
    %footer
      %p &copy; Supercool Pizza 2012